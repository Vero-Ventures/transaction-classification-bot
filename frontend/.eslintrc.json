{
  "globals": {
    "window": true,
    "document": true,
    "navigator": true,
    "require": "readonly",
    "module": "readonly",
    "console": "readonly",
    "global": "readonly"
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "ignorePatterns": [
    "node_modules/",
    "*.json",
    "*.html",
    "*.css",
    "*.md"
    // Add other file types you want to ignore
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/no-var-requires": "off"
  }
}