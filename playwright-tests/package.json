    "@types/node": "^20.12.12",
    "nyc": "^15.1.0",
    "playwright": "^1.44.1",
    "vite-plugin-istanbul": "^6.0.2"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "../frontend/**/*.{ts,tsx}",
      "../backend/**/*.py"
