{
  "name": "playwright-tests",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:playwright": "npx nyc --reporter=lcov --reporter=text npx playwright test",
    "testall": "npm run test:playwright && cd ../backend && coverage run -m pytest && coverage combine && coverage report && coverage lcov -o ../playwright-tests/coverage/python-lcov.info"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@playwright/test": "^1.44.0",
    "@types/node": "^20.12.12",
    "nyc": "^15.1.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "../frontend/src/**/*.{ts,tsx}",
      "../backend/src/**/*.py"
    ],
    "exclude": [
      "../playwright-tests/**",
      "playwright.config.ts"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ],
    "report-dir": "./coverage"
  }
}